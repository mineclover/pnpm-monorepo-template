{
  "private": false,
  "name": "@sample/visual-diff",
  "version": "0.1.0",
  "description": "Visual regression testing utility for comparing screenshots using monochrome conversion",
  "repository": "https://github.com/sample/pnpm-monorepo-template.git",
  "author": {
    "name": "Sample Author",
    "email": "author@example.com"
  },
  "files": [
    "build"
  ],

  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "@sample/source": "./src/index.ts",
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      },
      "require": {
        "@sample/source": "./src/index.ts",
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      }
    },
    "./package.json": "./package.json"
  },

  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest run",
    "test:unit": "vitest --project unit run"
  },

  "dependencies": {
    "sharp": "^0.33.5"
  },

  "devDependencies": {
    "vitest": "^4.0.6"
  }
}
